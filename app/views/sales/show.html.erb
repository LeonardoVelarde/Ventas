
<div class="container" align="left">
    <p>
        <h1><strong>Client:</strong> <%= @sale.client.name %></h1>
    </p>

  <h3>Product list</h3>
  <table class="table table-bordered">
    <tr>
      <th>Product</th>
      <th>Amount</th>
      <th>Price per unit</th>
      <th>Total price</th>
    </tr>
        <% @offers.each do |offer| %>
            <br>
            <tr>
              <td><%= offer.product.name %></td>
              <td><%= offer.amount %></td>
              <td><%= offer.price %></td>
              <td><%= offer.price * offer.amount %></td>
            </tr>
        <% end %>
  </table>

    <p>
        <h3 style="display: inline; font-weight: bold">Total price:</h3>&nbsp;&nbsp;<text style="font-size: 20px"><%= @price %> $</text>
    </p>

    <!--<%= link_to 'Edit', edit_sale_path(@sale) %>-->
    <!--<%= link_to 'Back', sales_path %>-->

  <% if !@sale.finished %>
      <br><br>
      <%= form_tag('/offers', method: 'post') do %>

          <div class="field hidden">
            <%= text_field_tag :sale_id, @sale.id %>
          </div>

          <div class="field">
            <strong>Product id:</strong>
            <%= number_field_tag :product_id %>
          </div>

          <div class="field hidden">
            <%= text_field_tag :sale_type, @sale.type_name %>
          </div>

          <div class="field">
            <strong>Amount:</strong>
            <%= number_field_tag :amount %>
          </div>

          <div class="actions">
            <%= submit_tag 'Register Product', {class: 'btn btn-lg bg-green'} %>
          </div>
      <% end %>


      <%= link_to 'Finish sale', '/finish/sale/' + @sale.id.to_s ,{class: 'btn btn-lg bg-blue'} %>
      <%= link_to 'Cancel sale', '/sales/' + @sale.id.to_s, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-lg bg-red' %>

      <br><br>
      <%= form_tag('/sales/'+ @sale.id.to_s, :method => 'get') do %>
          <%= text_field_tag(:c, '', { :class=>'form-control', :placeholder => 'Search', :style => 'width:90%; display:inline;' } ) %><%= submit_tag 'Search', {class: 'btn bg-blue'} %>
      <% end %>

      <table class="table table-bordered">
        <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Model</th>
          <th>Description</th>
          <th>Whole sale price</th>
          <th>Retail price</th>
          <!--<th>Amount</th>-->
          <th colspan="3">Options</th>
        </tr>
        </thead>

        <tbody>
        <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.name %></td>
              <td><%= product.model %></td>
              <td><%= product.description %></td>
              <td><%= product.whole_sale_price %></td>
              <td><%= product.retail_price %></td>
              <!--<td><%= product.amount %></td>-->
              <td><%= link_to 'Show', product, class: 'btn btn-default bg-blue' %></td>
              <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default bg-blue' %></td>
              <td><%= link_to 'Delete product', '/products/' + product.id.to_s, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn bg-red' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% end %>

</div>