<div class="container">
  <h1>Register new import</h1>

  <%= form_for(@import) do |f| %>

      <div class="field">
        <%= f.label :provider%><br>
        <%= f.text_field :provider, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit 'Start registration', {class: 'btn btn-success bg-green'}%>
      </div>
  <% end %>

  <%= link_to 'Back', imports_path, class: 'btn btn-default' %>

</div>